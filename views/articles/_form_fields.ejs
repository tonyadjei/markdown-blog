<div class="form-group">
    <label for="title" class="mb-2">Title</label>
    <input required type="text" value="<%= article.title %>" name="title" id="title" class="form-control mb-3">
</div>
<div class="form-group">
    <label for="description" class="mb-2">Description</label>
    <textarea name="description" id="description" class="form-control mb-3"><%= article.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown" class="mb-2">Markdown</label>
    <textarea  required name="markdown" id="markdown" class="form-control mb-3"><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary mt-3">Cancel</a>
<button type="submit" class="btn btn-primary mt-3">Save</button>
